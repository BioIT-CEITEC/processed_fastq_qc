{
  "workflow_description": {
    "name": "processed_fastq_qc",
    "version": 2.1,
    "label": "Processed fastq QC",
    "type": "processed_fastq_qc",
    "run_parameters": {
      "cpu": 30,
      "memory": 65
    },
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "libsize_fastq/{sample}*.fastq.gz",
      "logs/{sample}/libsizetrimming.log",
      "processed_fastq/{sample}*fastq.gz",
      "logs/{sample}/preprocessing.log",
      "qc_reports/{sample}/cutadapt/{sample}_preprocessing.log",
      "qc_reports/{sample}/cutadapt/{sample}_libsizetrimming.log",
      "qc_reports/processed_fastq_multiqc.html",
      "qc_reports/{sample}/processed_fastqc/*",
      "logs/{sample}/processed_fastqc_*.log",
      "qc_reports/{sample}/libsize_fastqc/*",
      "logs/{sample}/libsize_fastqc_*.log",
      "logs/merge_fastq_qc.log"
    ],
    "outputs_optional": [
      "processed_fastq/{sample}.UMI.fastq",
      "logs/filesender.log",
      "qc_reports/{sample}/biobloom/{sample}.biobloom_summary.tsv",
      "logs/{sample}/biobloom.log",
      "qc_reports/species_detector_summary_mqc.tsv",
      "logs/merge_detected_species.log",
      "qc_reports/{sample}/species_detector/{sample}*.species_stats.tsv",
      "logs/{sample}/species_detector*.log"
    ],
    "report_index": "qc_reports/processed_fastq_multiqc.html",
    "reports": [
      "qc_reports/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "requested_params": [
    "is_paired"
  ],
  "gui_params": {
    "primary": {
      "UMI": {
        "label": "UMI",
        "type": "enum",
        "default": "no_umi",
        "list": {
          "no_umi": "No UMI",
          "custom_umi": "Custom specified UMI",
          "CS_UMI": "CS_UMI",
          "CS_UMI_sep_file": "CS_UMI_sep_file",
          "Quantseq FWD": "Quantseq FWD",
          "CORALL": "CORALL",
          "LYNX": "LYNX",
          "BRONCO": "BRONCO",
          "Qiaseq": "Qiaseq",
          "TruSight_Oncology": "TruSight Oncology UMI"
        }
      },
      "UMI_write_to": {
        "label": "Where to record the UMIs.",
        "type": "enum",
        "default": "fastq_header",
        "list": {
          "fastq_header": "Fastq header",
          "sep_file": "Separate UMI fastq",
          "sep_file_gz": "Separate UMI fastq.gz"
        },
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi"
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": "fastq_header",
              "CS_UMI_sep_file": "sep_file",
              "Quantseq FWD": "fastq_header",
              "CORALL": "fastq_header",
              "LYNX": "sep_file",
              "BRONCO": "fastq_header",
              "Qiaseq": "fastq_header",
              "TruSight_Oncology": "fastq_header"
            }
          }
        }
      },
      "UMI_from_R3_file": {
        "label": "UMI is in demultiplexed R3 file.",
        "type": "bool",
        "default": false,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi"
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": false,
              "CS_UMI_sep_file": false,
              "Quantseq FWD": false,
              "CORALL": false,
              "LYNX": true,
              "BRONCO": true,
              "Qiaseq": false,
              "TruSight_Oncology": false
            }
          }
        }
      },
      "UMI_R1_start": {
        "label": "Start of UMI in R1.",
        "type": "int",
        "default": 0,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi",
              "UMI_from_R3_file": false
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": 1,
              "CS_UMI_sep_file": 1,
              "Quantseq FWD": 1,
              "CORALL": 1,
              "LYNX": 0,
              "BRONCO": 0,
              "Qiaseq": 0,
              "TruSight_Oncology": 1
            }
          }
        }
      },
      "UMI_R1_end": {
        "label": "Length of UMI in R1.",
        "type": "int",
        "default": 0,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi",
              "UMI_from_R3_file": false
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": 3,
              "CS_UMI_sep_file": 3,
              "Quantseq FWD": 6,
              "CORALL": 12,
              "LYNX": 0,
              "BRONCO": 0,
              "Qiaseq": 0,
              "TruSight_Oncology": 6
            }
          }
        }
      },
      "insert_R1_start": {
        "label": "Start of insert sequence in R1.",
        "type": "int",
        "default": 1,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi",
              "UMI_from_R3_file": false
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": 7,
              "CS_UMI_sep_file": 7,
              "Quantseq FWD": 7,
              "CORALL": 13,
              "LYNX": 0,
              "BRONCO": 0,
              "Qiaseq": 1,
              "TruSight_Oncology": 7
            }
          }
        }
      },
      "UMI_R2_start": {
        "label": "Start of UMI in R2.",
        "type": "int",
        "default": 0,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi",
              "UMI_from_R3_file": false
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": 1,
              "CS_UMI_sep_file": 1,
              "Quantseq FWD": 0,
              "CORALL": 0,
              "LYNX": 0,
              "BRONCO": 0,
              "Qiaseq": 1,
              "TruSight_Oncology": 1
            }
          }
        }
      },
      "UMI_R2_end": {
        "label": "Length of UMI in R2.",
        "type": "int",
        "default": 0,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi",
              "UMI_from_R3_file": false
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": 3,
              "CS_UMI_sep_file": 3,
              "Quantseq FWD": 0,
              "CORALL": 0,
              "LYNX": 0,
              "BRONCO": 0,
              "Qiaseq": 12,
              "TruSight_Oncology": 6
            }
          }
        }
      },
      "insert_R2_start": {
        "label": "Start of insert sequence in R2.",
        "type": "int",
        "default": 1,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "UMI": "custom_umi",
              "UMI_from_R3_file": false
            }
          },
          "value": {
            "UMI": {
              "CS_UMI": 7,
              "CS_UMI_sep_file": 7,
              "Quantseq FWD": 1,
              "CORALL": 1,
              "LYNX": 0,
              "BRONCO": 0,
              "Qiaseq": 24,
              "TruSight_Oncology": 7
            }
          }
        }
      }
    },
    "detailed": {
      "trim_adapters": {
        "label": "Trim adapters",
        "type": "bool",
        "default": true
      },
      "trim_adapter_select": {
        "label": "Trim adapter selection",
        "type": "enum",
        "default": "illumina",
        "list": {
          "illumina": "Illumina (AGATCGGAAGAGC)",
          "nextera": "Nextera (CTGTCTCTTATA)",
          "smallRNA": "small RNA (TGGAATTCTCGG)",
          "custom": "Custom"
        },
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "trim_adapters": true
            }
          }
        }
      },
      "adapter_seq": {
        "label": "Adapter sequence (1-xx,2-yy,zz)",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "trim_adapter_select": "custom"
            }
          }
        }
      },
      "adapter_type": {
        "label": "Adapter type",
        "type": "enum",
        "default": "a",
        "list": {
          "a": "Regular 3 prime",
          "g": "Regular 5 prime",
          "b": "Both type"
        },
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "trim_adapters": true
            }
          }
        }
      },
      "max_error": {
        "label": "Max error",
        "type": "string",
        "default": "0.1",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "trim_adapters": true
            }
          }
        }
      },
      "min_overlap": {
        "label": "Min overlap",
        "type": "int",
        "default": 3,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "trim_adapters": true
            }
          }
        }
      },
      "quality_trim": {
        "label": "Quality trimming (5’ cutoff,3’ cutoff)",
        "type": "string",
        "default": "0,20"
      },
      "cut_left1": {
        "label": "Cut left 1",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_fwd": 12,
              "sense": 9
            },
            "UMI": {
              "Quantseq FWD": 6
            }
          }
        }
      },
      "cut_left2": {
        "label": "Cut left 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "RNAseq_type": {
              "quant_rev": 12,
              "sense": 6
            }
          }
        }
      },
      "cut_right1": {
        "label": "Cut right 1",
        "type": "int",
        "default": 0
      },
      "cut_right2": {
        "label": "Cut right 2",
        "type": "int",
        "default": 0,
        "conditions": {
          "value": {
            "UMI": {
              "CORALL": 9
            }
          }
        }
      },
      "min_length": {
        "label": "Min length",
        "type": "int",
        "default": 35
      },
      "max_length": {
        "label": "Max length",
        "type": "int",
        "default": 250
      },
      "quality_base": {
        "label": "Quality base",
        "type": "enum",
        "default": "33",
        "list": {
          "33": "phred-33",
          "64": "phred-64"
        }
      },
      "filesender": {
        "label": "FileSender",
        "type": "bool",
        "default": false
      },
      "recipient": {
        "label": "Send results to (comma separated list of emails):",
        "type": "string",
        "default": "cfg@ceitec.muni.cz",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "filesender": true
            }
          }
        }
      },
      "filesender_raw": {
        "label": "Raw fastq",
        "type": "bool",
        "default": false,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "filesender": true
            }
          }
        }
      },
      "filesender_libsize": {
        "label": "Raw fastq cut to library size",
        "type": "bool",
        "default": false,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "filesender": true
            }
          }
        }
      },
      "filesender_processed": {
        "label": "Processed fastq",
        "type": "bool",
        "default": false,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "filesender": true
            }
          }
        }
      },
      "biobloom": {
        "label": "Biobloom tools",
        "type": "bool",
        "default": false
      },
      "biobloom_ref": {
        "label": "Biobloom reference species",
        "type": "string",
        "default": "H.sapiens;M.musculus;A.thaliana;D.melanogaster;C.elegans;S.cerevisiae",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "biobloom": true
            }
          }
        }
      },
      "species_detector": {
        "label": "Species detector",
        "type": "bool",
        "default": false
      },
      "max_reads_for_sp_detector": {
        "label": "Number of reads to use for species detection",
        "type": "int",
        "default": 1000,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "species_detector": true
            }
          }
        }
      },
      "evalue_for_sp_detector": {
        "label": "E-value cutof for species detection",
        "type": "string",
        "default": "1e-15",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "species_detector": true
            }
          }
        }
      },
      "message": {
        "label": "Message for recipient:",
        "type": "string",
        "default": "Dear customer, we are sending you the prepared fastq files from your sequencing. You have 29 days to download data. Thank you for using our facility. Best regards, Core facility of Bioinformatics and Genomics team.",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "filesender": true
            }
          }
        }
      }
    }
  }
}
